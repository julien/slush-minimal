{
  "env": {
    "browser": true,
    "node": true,
    "amd": true
  },

  "globals": {
  },

  "rules": {

    // Possible errors
    "no-cond-assign": 2,
    "no-console": 2,
    "no-constant-condition": 2,
    "no-comma-dangle": 2,
    "no-control-regex": 0,
    "no-debugger": 0,
    "no-dupe-keys": 2,
    "no-empty": 2,
    "no-empty-class": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": 2,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-reserved-keys": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-typeof": 2,

    // Best pratcises
    "block-scoped-var": 0,
    // "complexity": [1, 4],
    "consistent-return": 2,
    "curly": [2, "all"],
    "dot-notation": 1,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-caller": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-empty-label": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-labels": 2,
    "no-iterator": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 1,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-warning-comments": [2, { "terms": ["todo"], "location": "anywhere" }],
    "no-with": 2,
    "radix": 2,
    "wrap-iife": [2, "outside"],
    "yoda": 2,

    // Strict mode
    "no-extra-strict": 2,
    "strict": 2,

    // Variables
    "no-catch-shadow": 2,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-undef-init":  2,
    "no-unused-vars": 2,
    "no-use-before-define": 1,

    // Node.js
    "handle-callback-err": 2,
    "no-mixed-requires": 2,
    "no-path-concat": 2,
    "no-process-exit": 0,
    "no-sync": 2,

    // Stylistic issues
    "brace-style": "1tbs",
    "camelcase": 2,
    "consistent-this": [2, "that"],
    "func-names": 0,
    "func-style": [2, "declaration"],
    "new-cap": 2,
    "new-parens": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-space-before-semi": 2,
    "no-underscore-dangle": 2,
    "no-wrap-func": 2,
    "quotes": [2, "single", "avoid escape"],
    "semi": 2,
    "space-in-brackets": [2, "never"],
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "space-unary-word-ops": 2,
    "max-nested-callbacks": [2, 3],
    "one-var": 2,
    "wrap-regex": 2,

    // Legacy
    "max-depth": [2, 3],
    "max-len": [1, 160, 2],
    "max-params": [1, 8],
    "no-plusplus": 0
  }
}
